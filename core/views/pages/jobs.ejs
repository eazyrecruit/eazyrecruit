<div class="album py-3 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Jobs</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form method="GET" action="<%= locals.baseUrl %>" class="input-group mb-5">
                    <input type="text" class="form-control" placeholder="Search job" aria-label="Search jobs"
                    aria-describedby="button-addon2" name="search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <% for(var jobIndex=0; jobIndex < jobs.length; jobIndex++) {%>
            <div class="col-md-4" style="margin-bottom:10px;">
                <div class="card">
                    <img src="/images/freshers.jpg" width="100%"></img>
                    <div class="card-body">
                        <h5 class="card-title"><%= jobs[jobIndex].title %></h5>
                        <p class="card-text"><%- jobs[jobIndex].description %></p>
                        <a href="<%= 'jobs/'+jobs[jobIndex].guid %> " class="btn btn-primary">More</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <div class="container mt-4">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="<%= locals.baseUrl %>?page=1">First</a>
                </li>
                <% if (locals.hasPreviousPage) { %>
                <li class="page-item">
                    <a class="page-link" href="<%= locals.baseUrl %>?page=<%= previousPage %>"><%= previousPage %></a>
                </li>
                <% } %>
                <li class="page-item active">
                    <a class="page-link" href="<%= locals.baseUrl %>?page=<%= previousPage %>"><%= currentPage %></a>
                </li>
                <% if (locals.hasNextPage) { %>
                <li class="page-item">
                    <a class="page-link" href="<%= locals.baseUrl %>?page=<%= nextPage %>"><%= nextPage %></a>
                </li>
                <% } %>
                <li class="page-item">
                    <a class="page-link" href="<%= locals.baseUrl %>?page=<%= lastPage %>">Last</a>
                </li>
            </ul>
        </nav>
    </div>
</div>