<div class="album py-3 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Jobs</a></li>
                        <li class="breadcrumb-item"><a href="/<%= job.guid %>"><%= job.title %></a></li>
                        <li class="breadcrumb-item active" aria-current="page">Apply</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="card" style="width: 18rem;">
                    <img src="/<%= locals.job && job.metaImage ? job.metaImage :company && company.logo ? company.logo : 'images/defaultlogo.png' %>" class="card-img-top" width="100%"></img>
                    <div class="card-body">
                        <h5 class="card-title"><%= job.title %></h5>
                        <div class="row">
                            <span class="col-sm-12">
                                <%  if (locals.job && job.locations && job.locations.length) { %>
                                    <% for(let i = 0; i < job.locations.length; i++) { %>
                                    <%= job.locations[i].city %>, <%= job.locations[i].state %>
                                    <%  } %>
                                <% } else { %>
                                    N/A
                                <%  } %>
                            </span>
                            <span class="col-sm-12">
                                <% if (locals.job && job.minExperience) { %>
                                    <%= job.minExperience %> Year experience
                                    <% } else { %>
                                    N/A
                                    <% } %>
                            </span>
                            <span class="col-sm-12">
                                <% if (locals.job && job.type) { %>
                                    <%= job.type %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9 col-md-9">
                <div class="card ml-5">
                    <div class="card-header"><i class="fa fa-address-book "></i> <%= job.title %></div>
                    <div class="card-body">
                        <form method="post" action="#" enctype="multipart/form-data">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <input type="hidden" class="form-control" name="jobId" value="<%= job.id%>" required>
                                    <input type="hidden" class="form-control" name="source" value="website" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="name" class="required">Name</label>
                                    <input type="text" placeholder="Name" class="form-control" name="name" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 taggingBox">
                                    <label for="alterEgo" class="required">Email address</label>
                                    <input type="text" placeholder="Email address" class="form-control" name="email"
                                        required>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="contact" class="required">Phone number</label>
                                    <input type="text" placeholder="Phone number" class="form-control" name="phone"
                                        required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="name" class="required">Resume</label>
                                    <input type="file" placeholder="Resume" class="form-control" name="resume" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="contact" class="required">Availability</label>
                                    <select class="form-control" name="availability" required>
                                        <option>Select time</option>
                                        <option value="Immediate">Immediate</option>
                                        <option value="One month">One month</option>
                                        <option value="Two months">Two months</option>
                                        <option value="More than 2 months">More than 2 months</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 taggingBox">
                                    <label for="contact" class="required">Current CTC (Annually in lacs)</label>
                                    <input type="text" placeholder="Current CTC" class="form-control" name="currentCtc">
                                </div>
                                <div class="form-group col-md-6 taggingBox">
                                    <label for="contact" class="required">Expected CTC (Annually in lacs)</label>
                                    <input type="text" placeholder="Expected CTC" class="form-control"
                                        name="expectedCtc">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-10 mb-10 border-radius-30">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
