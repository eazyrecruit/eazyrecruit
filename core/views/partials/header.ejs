<header>
    <nav class="navbar container navbar-expand-lg">
        <% 
            let url = '/';
            if (company && company.website) {
                if (company.website.startsWith('www.')) {
                    url = company.website;
                } else {
                    url = 'www.' + company.website;
                }
            }
        %>
        <a class="navbar-brand" href="https://<%= url %>"><img src="/<%= company && company.logo ? company.logo : 'images/defaultlogo.png' %>"
                height="30px" alt="<%= url %>" id="logo"></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/jobs">Jobs <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <span class="nav-link"> | </span> 
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://<%= url %>">Home <span class="sr-only">Home</span></a>
                </li>
            </ul>
        </div>
    </nav>
</header>